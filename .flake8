[flake8]
max-line-length = 88
extend-ignore = E203, W503
exclude = .git,__pycache__,docs/source/conf.py,old,build,dist,.venv,bot/cogs/admin.py,bot/cogs/calendar_integration.py,bot/cogs/time_tracking.py,bot/main.py,config/logging.py,config/settings.py,main.py,migrations/env.py,models/__init__.py,services/user_service.py,services/task_service.py
per-file-ignores =
    # imported but unused, star imports
    __init__.py: F401, F403
    # Ignore line length in migration files
    migrations/versions/*.py: E501
